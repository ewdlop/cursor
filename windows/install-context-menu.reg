Windows Registry Editor Version 5.00

; Add "Open in Cursor" to Windows context menu
; IMPORTANT: Replace "C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe" 
; with the actual path to your Cursor.exe installation
; Common locations:
; - C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe
; - C:\\Program Files\\Cursor\\Cursor.exe
; - C:\\Program Files (x86)\\Cursor\\Cursor.exe

; Context menu for folders
[HKEY_CLASSES_ROOT\Directory\shell\OpenInCursor]
@="Open in Cursor"
"Icon"="\"C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe\""

[HKEY_CLASSES_ROOT\Directory\shell\OpenInCursor\command]
@="\"C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe\" \"%V\""

; Context menu for directory background (right-click in empty space)
[HKEY_CLASSES_ROOT\Directory\Background\shell\OpenInCursor]
@="Open in Cursor"
"Icon"="\"C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe\""

[HKEY_CLASSES_ROOT\Directory\Background\shell\OpenInCursor\command]
@="\"C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe\" \"%V\""

; Context menu for files
[HKEY_CLASSES_ROOT\*\shell\OpenInCursor]
@="Open in Cursor"
"Icon"="\"C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe\""

[HKEY_CLASSES_ROOT\*\shell\OpenInCursor\command]
@="\"C:\\Users\\YourUsername\\AppData\\Local\\Programs\\Cursor\\Cursor.exe\" \"%1\""
